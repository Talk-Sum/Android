<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    >


    <TextView
        android:id="@+id/createNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="54dp"
        android:text="새 노트 만들기"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/soundbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/soundbtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/wavbutton"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/videobtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/soundbtn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="파일로 가져오기"
        android:layout_marginTop="50px"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/soundbtn"
        app:layout_constraintStart_toStartOf="@+id/soundbtn"
        app:layout_constraintEnd_toEndOf="@+id/soundbtn"/>



    <ImageButton
        android:id="@+id/videobtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/soundbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videobtn_text"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="링크로 가져오기"
        android:textSize="18dp"
        android:layout_marginTop="50px"
        app:layout_constraintTop_toBottomOf="@+id/videobtn"
        app:layout_constraintStart_toStartOf="@+id/videobtn"
        app:layout_constraintEnd_toEndOf="@+id/videobtn"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kotra_godic"
        android:text="video is not selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundbtn"
        app:layout_constraintVertical_bias="0.315" />

    <ImageButton
        android:id="@+id/nextbtn"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:background="@drawable/nextbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.149"
        app:srcCompat="@drawable/nextbtn" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>